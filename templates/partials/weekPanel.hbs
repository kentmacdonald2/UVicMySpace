{{! This is the template for the Week Panel
    -------------------------------------------------------
    - It exists in the context of "Week"
    - Used on the Home Page
}}
<!-- Table -->
<table class="timetable" width="100%">
    <thead>
    <tr>
        <th width="10%"><i class="fa fa-clock-o"></i></th>{{#each days}}
        <th width="18%">{{short}}</th>{{/each}}
    </tr>
    </thead>
    <tbody>{{#each (listTimes times.start times.end)}}
        <tr>
            <th class="time" rowspan="2">{{to12hour this}}</th>{{#each ../days}}
            <td>{{#with (lookup (lookup ../../user.courses.semesters.[0].schedule @key) (add ../this ".0"))}}
                {{>timetableEvent course=(lookup ../../../user.courses.semesters.[0].courses course)}}
                {{else}}
                <div class="fill"></div>{{/with}}
            </td>{{/each}}
        </tr>
        <tr class="half-hour">{{#each ../days}}
            <td>{{#with (lookup (lookup ../../user.courses.semesters.[0].schedule @key) (add ../this ".5"))}}
                {{>timetableEvent course=(lookup ../../../user.courses.semesters.[0].courses course)}}
                {{else}}
                <div class="fill"></div>{{/with}}
            </td>{{/each}}
        </tr>{{/each}}
    </tbody>
</table>